extends _layout
block var
  - metas = {}
  - metas.title = 'トップページ'
  - metas.url = 'http://XXXX.com/'
  - metas.image = 'http://XXXX.com/image.jpg'
  - metas.site_name = 'サイト名'
  - metas.description = '説明'
  include _config
  - var key = 'top'
block append meta
  +meta(metas)
  include _inc_meta_facebook
